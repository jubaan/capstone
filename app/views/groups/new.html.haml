- provide(:title, "New Group")
.row
  -# .col.py-3
  -#   = image_tag '001-art.png', class: 'icon'
  .col.py-3
    = simple_form_for(@group) do |f|
      = f.error_notification
      .form-inputs
        = f.input :name, required: true
        = f.input :icon, collection: Icon.all.map { |i| i.url}, prompt: 'Select an icon'
      .form-actions
        = f.button :submit, "Save", class: 'btn btn-primary btn-lg w-100'
