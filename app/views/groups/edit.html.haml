- provide(:title, "Edit Group")
.row
  .col.py-3
    = simple_form_for(@group) do |f|
      = f.error_notification
      .form-inputs
        = f.input :name
        = f.input :icon, collection: Icon.all.map { |i| i.url}, prompt: 'Select an icon'
      .form-actions
        = f.button :submit, "Update", class: 'btn btn-primary btn-lg w-100'
