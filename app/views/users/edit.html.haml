- provide(:title, "Settings")
.row
  .col-xl.py-3
    = simple_form_for(@user) do |f|
      = f.error_notification
      .form-inputs
        .media
          .d-flex.align-items-center.mb-4
            = image_tag current_user.image.url, width: '150', height: '150', class: 'rounded-circle mr-3'
            = f.input :image, as: :file, label: 'Change profile image'
        .media-body
          = f.input :name
          = f.input :email
          = f.input :password
      .form-actions
        = f.button :submit, "Update Profile", class: 'btn btn-primary btn-lg w-100'
  .col-xl.py-3
    = link_to "Delete account", user_path(@user), method: :delete, class: 'btn btn-danger btn-lg w-100'
