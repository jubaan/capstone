-provide(:title, 'New Expense')
.row
  .col.py-3
    = simple_form_for(@expense) do |f|
      = f.error_notification
      .form-inputs
        = f.input :name, required: true
        = f.input :amount, as: :float, required: true
        = f.input :group_id, collection: Group.all, prompt: 'Select a group'
      .form-actions
        = f.button :submit, "Add expense", class: 'btn btn-primary btn-lg w-100'
