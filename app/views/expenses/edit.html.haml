- provide(:title, "Edit Item")
.row
  .col.py-3
    = simple_form_for(@expense) do |f|
      = f.error_notification
      .form-inputs
        = f.input :name
        = f.input :amount, as: :float
        = f.input :group_id, as: :select, collection: current_user.groups.collection, include_blank: false
      .form-actions
        = f.button :submit, "Update", class: 'btn btn-primary btn-lg w-100'
